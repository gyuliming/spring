    <context:component-scan base-package="com.ssg.springwebmvc"/>

    <bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/sqldb?serverTimezone=Asia/Seoul"/>
        <property name="username" value="root"/>
        <property name="password" value="Songkl123!"/>

        <property name="dataSourceProperties">
            <props>
                <prop key="cachePrepStmts">true</prop>
                <prop key="prepStmtCacheSize">250</prop>
                <prop key="prepStmtCacheSqlLimit">2048</prop>
            </props>
        </property>
    </bean>
    <bean id="dataSource" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
        <constructor-arg ref="hikariConfig"/>
    </bean>

    <bean id="transactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- @Transactional 활성화 -->
    <tx:annotation-driven transaction-manager="transactionManager" proxy-target-class="true"/>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <!-- mappers 폴더밑에 폴더가 있어도 상관없고 mappers/**/  *.xml 은 이름에 상관없는 xml 파일 -->
        <property name="mapperLocations" value="classpath:/mappers/**/*.xml"></property>
    </bean>

    <!-- 매퍼인터페이스 등록 -->
    <mybatis:scan base-package="com.ssg.membertest.mapper"></mybatis:scan>
</beans>